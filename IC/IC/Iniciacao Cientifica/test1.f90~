PROGRAM	test1

IMPLICIT NONE

INTEGER::r

DOUBLE PRECISION:: pi, rad, y, x, w, z, l

PRINT*, 'Insira o valor do lado do Hexagono.'
READ*,l
z=0.0
 OPEN (UNIT=1,FILE='coordenadas.xyz')	
WRITE(1,*) "6"
WRITE(1,*)

DO r=1,6

	w=r*60.0D0-30.0D0
	pi=dacos(-1.0D0)
	rad= pi*w*(2.0D0/360.0D0)
	y=l*dsin(rad)
	x=l*dcos(rad)
	WRITE (1,*) "c",x,y,z
	
	
END DO
 CLOSE(UNIT=1)


END PROGRAM test1
