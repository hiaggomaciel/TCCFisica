PROGRAM	Benzeno

IMPLICIT NONE

INTEGER::r,n

DOUBLE PRECISION:: pi, rad, y, x, w, z, l

PRINT*, 'Insira o valor do lado do Hexagono.'
READ*,l
z=0.0D0
OPEN(UNIT=1,FILE='Benzeno.xyz')
WRITE(1,*) 6
WRITE(1,*)
DO r=0,5
	w=r*60.0D0-30.0D0
	pi=dacos(-1.0D0)
	rad= pi*w*(2.0D0/360.0D0)
	y=l*dsin(rad)
	x=l*dcos(rad)
WRITE(1,*) 'c',x,y,z

PRINT*,'x=',x
PRINT*,
PRINT*,'y=',y
PRINT*,
PRINT*,'z=',z
PRINT*,	
END DO

END PROGRAM Benzeno
