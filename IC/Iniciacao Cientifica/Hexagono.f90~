PROGRAM	hexagono

IMPLICIT NONE

INTEGER::r

DOUBLE PRECISION:: pi, rad, y, x, w, z, l

PRINT*, 'Insira o valor do lado do Hexagono.'
READ*,l
z=0.0

DO r=1,6

	w=r*60.0D0
	pi=dacos(-1.0D0)
	rad= pi*w*(2.0D0/360.0D0)
	y=l*dsin(rad)
	x=l*dcos(rad)
	
	
END DO

PRINT*,'x=',x
PRINT*,
PRINT*,'y=',y
PRINT*,
PRINT*,'z=',z
PRINT*,

END PROGRAM hexagono
